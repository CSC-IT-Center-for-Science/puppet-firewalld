<?xml version="1.0" encoding="utf-8"?>
<zone>
<%- unless @short.empty? -%>
  <short><%= @short %></short>
<%- end -%>
<%- unless @description.empty? -%>
  <description><%= @description %></description>
<%- end -%>
<%- @interfaces.each do |interface| -%>
  <interface name="<%= interface %>"/>
<%- end -%>
<%- @sources.each do |source| -%>
  <source name="<%= source %>"/>
<%- end -%>
<%- @services.each do |service| -%>
  <service name="<%= service %>"/>
<%- end -%>
<%- @ports.each do |port| -%>
 <%- unless port['comment'].nil? -%>
  <!-- <%= port['comment'] %> -->
 <%- end -%>
  <port port="<%= port['port'] %>" protocol="<%= port['protocol'] %>"/>
<%- end -%>
<%- @icmp_blocks.each do |icmp_block| -%>
  <icmp-block name="<%= icmp_block %>"/>
<%- end -%>
<%- if @masquerade == true -%>
  <masquerade/>
<%- end -%>
<%- @forward_ports.each do |fw_port| -%>
 <%- unless fw_port['comment'].nil? -%>
  <!-- <%= fw_port['comment'] %> -->
 <%- end -%>
 <%- if fw_port['to_addr'].nil? -%>
  <forward-port port="<%= fw_port['portid'] %>" protocol="<%= fw_port['protocol'] %>" to-port="<%= fw_port['to_port'] %>"/>
 <%- elsif fw_port['to_port'].nil? -%>
  <forward-port port="<%= fw_port['portid'] %>" protocol="<%= fw_port['protocol'] %>" to-addr="<%= fw_port['to_addr'] %>"/>
 <%- else -%>
  <forward-port port="<%= fw_port['portid'] %>" protocol="<%= fw_port['protocol'] %>" to-port="<%= fw_port['to_port'] %>" to-addr="<%= fw_port['to_addr'] %>"/>
 <%- end -%>
<%- end -%>

<%- @rich_rules.each do |rule| -%>

 <%- if rule['family'].nil? -%>
  <rule>
 <%- else -%>
  <rule family="<%= rule['family'] %>">
 <%- end -%>

 <%- unless rule['source'].nil? -%>
  <%- if rule['source']['invert'].nil? -%>
    <source address="<%= rule['source']['address'] %>"/>
  <%- else -%>
    <source address="<%= rule['source']['address'] %>" invert="true"/>
  <%- end -%>
 <%- end -%>

 <%- unless rule['destination'].nil? -%>
  <%- if rule['destination']['invert'].nil? -%>
    <destination address="<%= rule['destination']['address'] %>"/>
  <%- else -%>
    <destination address="<%= rule['destination']['address'] %>" invert="true"/>
  <%- end -%>
 <%- end -%>

 <%- unless rule['service'].nil? -%>
    <service name="<%= rule['service'] %>"/>
 <%- end -%>

 <%- unless rule['port'].nil? -%>
    <port port="<%= rule['port']['portid'] %>" protocol="<%= rule['port']['protocol'] %>"/>
 <%- end -%>

 <%- unless rule['protocol'].nil? -%>
    <protocol value="<%= rule['protocol'] %>"/>
 <%- end -%>

 <%- unless rule['icmp_block'].nil? -%>
    <icmp-block name="<%= rule['icmp_block'] %>"/>
 <%- end -%>

 <%- if not rule['masquerade'].nil? and rule['masquerade'] == true -%>
    <masquerade/>
 <%- end -%>

 <%- unless rule['forward_port'].nil? -%>
   <%- if rule['forward_port']['to_addr'].nil? -%>
    <forward-port port="<%= rule['forward_port']['portid'] %>" protocol="<%= rule['forward_port']['protocol'] %>" to-port="<%= rule['forward_port']['to_port'] %>"/>
   <%- elsif rule['forward_port']['to_port'].nil? -%>
    <forward-port port="<%= rule['forward_port']['portid'] %>" protocol="<%= rule['forward_port']['protocol'] %>" to-addr="<%= rule['forward_port']['to_addr'] %>"/>
   <%- else -%>
    <forward-port port="<%= rule['forward_port']['portid'] %>" protocol="<%= rule['forward_port']['protocol'] %>" to-port="<%= rule['forward_port']['to_port'] %>" to-addr="<%= rule['forward_port']['to_addr'] %>"/>
   <%- end -%>
 <%- end -%>

 <%- unless rule['log'].nil? -%>
    <log prefix="<%= rule['log']['prefix'] %>" level="<%= rule['log']['level'] %>">
   <%- unless rule['log']['limit'].nil? -%>
      <limit value="<%= rule['log']['limit'] %>"/>
    </log>
   <%- end -%>
 <%- end -%>

 <%- unless rule['accept'].nil? -%>
    <accept/>
 <%- end -%>

  </rule>
<%- end -%>

</zone>
